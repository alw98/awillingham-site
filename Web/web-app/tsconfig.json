{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es6",
        "lib": ["es6", "dom"],
		"sourceMap": true,
		"noImplicitAny": true,
		"baseUrl": "src",
        "jsx": "react",
		"esModuleInterop": true,
        "moduleResolution": "node",
		"declaration": true,
		"declarationDir": "dist/types",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
	},
	"watchOptions": {
		"excludeDirectories": [
			"node_modules",
			"dist"
		]
	},
	"include": [
		"src/**/*.ts*",
		"test/**/*.ts*",
        "index.d.ts"
	]
}